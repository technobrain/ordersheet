<%= render '/layouts/header' %>
<h2>業務マスタ一覧</h2>

<table>
  <thead>
    <tr>
      <th>Business name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @business_masters.each do |business_master| %>
    <tr>
      <td><%= business_master.business_name %></td>
      <td><%= link_to '参照', business_master %></td>
      <td><%= link_to '更新', edit_business_master_path(business_master) %></td>
      <td><%= link_to '削除', business_master, method: :delete, data: { confirm: 'よろしいですか?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

