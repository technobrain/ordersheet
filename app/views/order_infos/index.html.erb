<%= render '/layouts/header' %>
<h2>受発注情報一覧</h2>

<%= link_to '新規登録', new_order_info_path %>
<table id="order_infos_list">
<br />
  <thead>
    <tr>
      <th id="width_no">注文番号</th>
      <th id="width_longtext">案件名</th>
      <th id="width_name">取引先会社名</th>
      <th id="width_name">売上計上部門</th>
      <th id="width_name">業務内容</th>
      <th id="width_date">契約期間<br>（開始）</th>
      <th id="width_date">契約期間<br>（終了）</th>
      <th id="width_name">作業場所</th>
      <th id="width_longtext">備考</th>
      <th colspan=3></th>
    </tr>
  </thead>

  <tbody>
    <% @order_info.each do |order_info| %>
  　<% css = cycle('even','odd') %>
    <tr class = "order_infos_list <%= css %>">
      <td><%= order_info.id %></td>
      <td><%= order_info.project_master.project_name %></td>
      <td><%= order_info.company_master.company_name %></td>
      <td><%= order_info.unit_master.unit_name %></td>
      <td><%= order_info.business_master.business_name %></td>
      <td><%= order_info.contract_start_date %></td>
      <td><%= order_info.contract_end_date %></td>
      <td><%= order_info.work_place %></td>
      <td><%= order_info.other %></td>
      <td><%= link_to '参照', order_info %></td>
      <td><%= link_to '更新', edit_order_info_path(order_info) %></td>
      <td><%= link_to '削除', order_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

