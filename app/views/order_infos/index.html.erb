<%= render '/layouts/header' %>
<h2>受発注情報一覧</h2>

<%= link_to '新規登録', new_order_info_path %>
<table id="order_infos_list">
<br />
  <thead>
    <tr>
      <th id="width_no">注文番号</th>
      <th id="width_longtext">取引先会社名</th>
      <th id="width_name">所属部署</th>
      <th id="width_name">起票者</th>
      <th id="width_name">売上計上部門</th>
      <th id="width_name">案件名</th>
      <th id="width_name">業務内容</th>
      <th id="width_date">契約期間（開始）</th>
      <th id="width_date">契約期間（終了）</th>
      <th id="width_name">作業場所</th>
      <th id="width_date">研修日</th>
      <th id="width_name">入金サイト</th>
      <th id="width_time">作業時間（開始）</th>
      <th id="width_time">作業時間（終了）</th>
      <th id="width_longtext">備考</th>
      <th id="width_date">管理本部受領日</th>
      <th id="width_date">注文書発効日</th>
      <th id="width_no">注文ＮＯ</th>
      <th id="width_longtext">管理本部備考</th>
      <th colspan=3></th>
    </tr>
  </thead>

  <tbody>
    <% @order_infos.each do |order_info| %>
  　<% css = cycle('even','odd') %>
    <tr class = "order_infos_list <%= css %>">
      <td><%= order_info.id %></td>
      <td><%= CompanyMaster.find(order_info.company_id).company_name %></td>
      <td><%= UnitMaster.find(order_info.unit_id).unit_name %></td>
      <td><%= order_info.author %></td>
      <td><%= UnitMaster.find(order_info.revenue_unit_id).unit_name %></td>
      <td><%= ProjectMaster.find(order_info.project_id).project_name %></td>
      <td><%= BusinessMaster.find(order_info.business_id).business_name %></td>
      <td><%= order_info.contract_start_date %></td>
      <td><%= order_info.contract_end_date %></td>
      <td><%= order_info.work_place %></td>
      <td><%= order_info.income_date %></td>
      <td><%= PaymentSiteMaster.find(order_info.payment_site_id).payment_site_name %></td>
      <td><%= order_info.work_start_date %></td>
      <td><%= order_info.work_end_date %></td>
      <td><%= order_info.other %></td>
      <td><%= order_info.general_receipt_date %></td>
      <td><%= order_info.general_order_date %></td>
      <td><%= order_info.general_order_no %></td>
      <td><%= order_info.general_other %></td>
      <td><%= link_to '参照', order_info %></td>
      <td><%= link_to '更新', edit_order_info_path(order_info) %></td>
      <td><%= link_to '削除', order_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

